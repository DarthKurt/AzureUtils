@model AzureBlobProxy.BlobIndexModel

@{
    ViewBag.Title = "Main Report";
    Layout = "~/Pages/_Layout.cshtml";
}

@section AddToHead {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <title>Cloud storage browser</title>
    <style>
        .tree {
            position: relative;
            margin-top: 10px;
            padding: 10px;
            font-family: 'Roboto Mono', monospace;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
        }

        .tree span {
            font-size: 13px;
            font-style: italic;
            letter-spacing: 0.4px;
            color: #a8a8a8;
        }

        .tree .bi-folder2-open, .tree .bi-folder { color: #007bff; }

        .tree .bi-file-earmark { color: #f21f10; }

        .tree ul {
            padding-left: 5px;
            list-style: none;
        }

        .tree ul li {
            position: relative;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-left: 15px;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        .folder li:before {
            position: absolute;
            top: 15px;
            left: 0;
            width: 10px;
            height: 1px;
            margin: auto;
            content: '';
            background-color: #666;
        }

        .folder li:after {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 1px;
            height: 100%;
            content: '';
            background-color: #666;
        }

        .tree ul li:last-child:after { height: 15px; }

        .tree ul a {
            cursor: pointer;
            text-decoration: none;
            color: #212529;
        }

        .tree ul a:visited {
            text-decoration: none;
            color: #212529;
        }

        .tree ul a:hover {
            text-decoration: none;
            color: #212529;
        }
    </style>
}

@if (Model != null)
{
    <div class="tree">
        <ul>
            @if (!string.IsNullOrWhiteSpace(Model.Path))
            {
                var pathSegments = Model.Path.Split("/");

                <li>
                    <i class="bi bi-folder2-open"></i>
                    <a asp-controller="BlobProxy"
                       asp-action="Index"
                       asp-route-container="@Model.Container"
                       asp-route-path="@(string.Join("/", pathSegments.Take(pathSegments.Length - 1)))">
                        [parent directory]
                    </a>
                    <ul class="folder">
                        @{ await Html.RenderPartialAsync("ItemsList.cshtml", Model); }
                    </ul>
                </li>
            }
            else
            {
                await Html.RenderPartialAsync("ItemsList.cshtml", Model);
            }
        </ul>
    </div>
}